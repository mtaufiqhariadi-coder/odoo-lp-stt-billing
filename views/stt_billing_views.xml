<odoo>
    <record id="lp_stt_billing_view_tree" model="ir.ui.view">
        <field name="name">lp.stt.billing.tree</field>
        <field name="model">lp.stt.billing</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="client_code"/>
                <field name="processed_from_file"/>
                <field name="stt_count"/>
                <field name="debit"/>
                <field name="credit"/>
                <field name="total_amount"/>
            </list>
        </field>
    </record>

    <record id="lp_stt_billing_view_form" model="ir.ui.view">
        <field name="name">lp.stt.billing.form</field>
        <field name="model">lp.stt.billing</field>
        <field name="arch" type="xml">
            <form string="Billing Detail">
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="client_code"/>
                        <field name="processed_from_file"/>
                        <field name="stt_count"/>
                        <field name="debit"/>
                        <field name="credit"/>
                        <field name="total_amount" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="lp_stt_billing_search" model="ir.ui.view">
    <field name="name">lp.stt.billing.search</field>
    <field name="model">lp.stt.billing</field>
    <field name="arch" type="xml">
        <search>
            <field name="date"/>
            <field name="client_code"/>
            <field name="processed_from_file"/>

            <filter string="Debit > 0" name="debit_filter" domain="[('debit','>',0)]"/>
            <filter string="Credit > 0" name="credit_filter" domain="[('credit','>',0)]"/>
        </search>
    </field>
    </record>


    <record id="lp_stt_billing_action" model="ir.actions.act_window">
        <field name="name">Billing Data</field>
        <field name="res_model">lp.stt.billing</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="lp_stt_billing_search"/>
    </record>
</odoo>
